{
	"packageManager": "pnpm@9.12.2",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm -C app dev",
		"build": "pnpm -C internal/build build",
		"build:pulse": "pnpm -C internal/build build-pulse",
		"build:app": "pnpm -C app build",
		"jot:dev": "pnpm -C internal/jot-down dev",
		"prepare": "husky",
		"prettier": "prettier --write .",
		"test": "vitest --typecheck",
		"cleanup": "tsx scripts/cleanup.ts",
		"typecheck": "vue-tsc -p tsconfig.json --noEmit"
	},
	"keywords": [
		"vue",
		"typescript",
		"richtext-editor"
	],
	"author": "bee1an",
	"license": "MIT",
	"dependencies": {
		"@yak-paper/build": "workspace:*",
		"@yak-paper/composables": "workspace:*",
		"@yak-paper/core": "workspace:*",
		"@yak-paper/material": "workspace:*",
		"@yak-paper/theme-utils": "workspace:*",
		"@yak-paper/transforms": "workspace:*",
		"@yak-paper/utils": "workspace:*",
		"vue": "3.5.13",
		"yak-paper": "workspace:*"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.0",
		"@commitlint/config-conventional": "19.8.0",
		"@eslint/js": "9.23.0",
		"@types/fs-extra": "11.0.4",
		"@types/shelljs": "0.8.15",
		"@vitejs/plugin-vue": "5.2.1",
		"@vitejs/plugin-vue-jsx": "4.1.2",
		"commander": "13.1.0",
		"csstype": "3.1.3",
		"cz-git": "1.11.1",
		"eslint": "9.23.0",
		"eslint-plugin-vue": "10.0.0",
		"fast-glob": "3.3.3",
		"fs-extra": "11.3.0",
		"globals": "16.0.0",
		"husky": "9.1.7",
		"jsdom": "26.0.0",
		"lint-staged": "15.5.0",
		"picocolors": "1.1.1",
		"postcss": "8.5.3",
		"prettier": "3.5.3",
		"shelljs": "0.9.2",
		"tsx": "4.19.3",
		"typescript": "5.8.2",
		"typescript-eslint": "8.29.0",
		"vitepress": "1.6.3",
		"vitest": "3.1.1",
		"vue-tsc": "2.2.4"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.vue": [
			"eslint --fix",
			"prettier --parser=vue --write"
		],
		"*.scss": [
			"prettier --write"
		],
		"*.md": [
			"eslint --fix",
			"prettier --write --parser markdown --prose-wrap never"
		]
	}
}
