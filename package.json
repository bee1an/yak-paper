{
	"packageManager": "pnpm@9.12.2",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "pnpm -C app dev",
		"prepare": "husky"
	},
	"keywords": [
		"vue",
		"typescript",
		"richtext-editor"
	],
	"author": "bee1an",
	"license": "MIT",
	"dependencies": {
		"@paper/core": "workspace:*",
		"@yak/paper": "workspace:*",
		"vue": "3.5.13"
	},
	"devDependencies": {
		"@commitlint/cli": "19.8.0",
		"@commitlint/config-conventional": "19.8.0",
		"@eslint/js": "9.23.0",
		"cz-git": "1.11.1",
		"eslint": "9.23.0",
		"eslint-plugin-vue": "10.0.0",
		"globals": "16.0.0",
		"husky": "9.1.7",
		"lint-staged": "15.5.0",
		"prettier": "3.5.3",
		"typescript": "5.8.2",
		"typescript-eslint": "8.29.0",
		"vue-tsc": "2.2.4"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.vue": [
			"eslint --fix",
			"prettier --parser=vue --write"
		],
		"*.css": [
			"prettier --write"
		],
		"*.md": [
			"eslint --fix",
			"prettier --write --parser markdown --prose-wrap never"
		]
	}
}
